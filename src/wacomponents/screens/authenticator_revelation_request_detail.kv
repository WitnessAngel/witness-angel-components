#:import tr wacomponents.i18n.tr


<AuthenticatorRevelationRequestDetailScreen>:
    revelation_request_label: ""
    revelation_request_summary_text: ""
    action_buttons_are_enabled: False

    on_pre_enter:

    WAMainVerticalScrollView:

        WAVerticalPanel:

            WAToolbar:
                title: tr._("Authorization request details")
                left_action_items: [["arrow-left", lambda x: root.go_to_previous_screen(), tr._("Back")]]
                right_action_items: []

            WAElevatedBoxLayout:
                MDLabel:
                    text: root.revelation_request_label
                    padding_x: "10dp"

            WATextInput:
                id: revelation_request_summary
                padding: 10
                halign: "left"
                size_hint: 1, None
                height: self.minimum_height
                text: root.revelation_request_summary_text

            WARecycleView:
                id: symkey_decryption_request_table
                viewclass: 'WAIconListItemEntry'

            WAButtonsGridLayout:
                disabled: not root.action_buttons_are_enabled

                WAOperationButton:
                    id: accepted_button
                    icon: "check"
                    text: tr._("Accept")
                    on_press: root.open_dialog_accept_request()
                    size_hint_x: 1  # HACK

                WAOperationButton:
                    id: rejected_button
                    icon: "close"
                    text: tr._("Reject")
                    on_press: root.open_dialog_reject_request()
                    size_hint_x: 1  # HACK

            VSeparator: