#:import tr wacomponents.i18n.tr


<RightCheckbox@IRightBodyTouch+MDCheckbox>

<ListItemWithCheckbox@OneLineAvatarIconListItem>
    text: ""
    unique_identifier: None  # Use for save keystore uid

    IconLeftWidget:
        icon: "key"

    RightCheckbox:
        id: check


<ClaimantRevelationRequestCreationFormScreen>:
    on_pre_enter:
        root.display_claimant_revelation_request_creation_form()

    WAMainVerticalScrollView:

        WAVerticalPanel:

            WAToolbar:
                title: tr._("Submit authorization request")
                left_action_items: [["arrow-left", lambda x: root.go_to_previous_screen(), tr._("Back")]]
                right_action_items: [["refresh", lambda x: root.display_claimant_revelation_request_creation_form(), tr._("Refresh")], ["home", lambda x: app.get_back_to_home_screen(), tr._("Back to home")],]

            WAElevatedBoxLayout:
                MDLabel:
                    text: tr._("Send an authorization request to remote key guardian")
                    padding_x: "10dp"

            WAVerticalScrollView:

                GridLayout:
                    spacing: 20
                    padding: [20, 30]
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height

                    WALabel:
                        text: tr._("Summary: ")

                    WATextInput:
                        size_hint: 1, None
                        height: self.minimum_height
                        id: revelation_request_summary
                        text: tr._("No information available")

                    WALabel:
                        text: tr._("Select authenticator(s) to query")

                    MDList:
                        id: authenticator_checklist

                    WALabel:
                        text: tr._("Justify the authorization request")

                    BoxLayout:
                        size_hint_y: None
                        height: self.minimum_height
                        padding: [10, 0]

                        MDTextField:
                            hint_text: tr._("Enter a description (minimum 10 characters):")
                            mode: "rectangle"
                            multiline: True
                            id: request_description

                    RelativeLayout:
                        size_hint: 1, None
                        size: 200, 80
                        padding: [10, 10]

                        WAOperationButton:
                            id: button_decrypt
                            icon: "send-outline"
                            text: tr._("Send my decryption request")
                            pos_hint: {"center_x": .5, "center_y": .5}
                            on_press: root.submit_decryption_request()







