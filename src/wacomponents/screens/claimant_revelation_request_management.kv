<ClaimantRevelationRequestManagementScreen>:
    on_pre_enter:
        root.conditionally_refresh_decryption_request_list()

    WAMainVerticalScrollView:

        WAVerticalPanel:

            WAToolbar:
                title: tr._("All authorization requests")
                left_action_items: [["arrow-left", lambda x: root.go_to_previous_screen(), tr._("Back")]]
                right_action_items: [["refresh", lambda x: root.display_decryption_request_list(), tr._("Refresh")], ["home", lambda x: app.get_back_to_home_screen(), tr._("Back to home")],]

            WAElevatedBoxLayout:
                MDLabel:
                    text: tr._("View authorization requests submitted for each container")
                    padding_x: "10dp"

            WARecycleView:
                id: decryption_request_table
                viewclass: 'WAClaimantAuthorizationRequestListItemEntry'
