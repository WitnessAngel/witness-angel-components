#:import tr wacomponents.i18n.tr
#:import EXTERNAL_EXPORTS_DIR wacomponents.default_settings.EXTERNAL_EXPORTS_DIR


<DecryptionStatusLabel@MDLabel>:
    padding_x: "10dp"
    size_hint_y: None
    height: 40
    halign: "center"
    theme_text_color: "Custom"
    text_color: 0, 0, 0, 1
    md_bg_color: .7, .7, .7, .5


<CryptainerDecryptionResultScreen>:

    on_pre_enter:
        # Lazy-init hack to workaround Clock iteration troubles
        root.display_revelation_request_error()

    WAMainVerticalScrollView:

        WAVerticalPanel:

            WAToolbar:
                title: tr._("Decryption report")
                left_action_items: [["arrow-left", lambda x: root.go_to_previous_screen(), tr._("Back")]]
                right_action_items: [["home", lambda x: app.get_back_to_home_screen(), tr._("Back to home")]]

            WAElevatedBoxLayout:
                MDLabel:
                    text: tr._("Export folder: %s") % app.format_path_for_display(EXTERNAL_EXPORTS_DIR)
                    padding_x: "10dp"

            WAVerticalScrollView:
                size_hint_y: 1

                GridLayout:
                    id: decryption_info_list
                    padding_x: "10dp"
                    size_hint: 1, None
                    cols: 1
                    # height: self.minimum_height
                    # cols:1



