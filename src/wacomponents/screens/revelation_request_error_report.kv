#:import tr wacomponents.i18n.tr
#:import strip_external_app_root_prefix wacomponents.default_settings.strip_external_app_root_prefix

<RevelationRequestErrorReportScreen>:

    on_pre_enter:
        # Lazy-init hack to workaround Clock iteration troubles
        root.display_revelation_request_error()

    WAMainVerticalScrollView:

        WAVerticalPanel:

            WAToolbar:
                title: "Witness Angel"
                left_action_items: [["arrow-left", lambda x: root.go_to_previous_screen(), tr._("Back")]]
                right_action_items: [["home", lambda x: app.get_back_to_home_screen(), tr._("Back to home")]]

            WAElevatedBoxLayout:
                MDLabel:
                    text: tr._("Revelation request error report")
                    padding_x: "10dp"

            WAVerticalScrollView:
                size_hint_y: 0.5
                padding: [20, 20]
                id: error_report_scrollview

                WASelectableLabel:
                    id: error_report
                    text: tr._("No decryption_error")